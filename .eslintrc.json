{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "import/no-dynamic-require": "off",
    "global-require": "off",
    "no-undef": "off",
    "no-console": "off",
    "consistent-return": "off",
    "no-restricted-globals": "off",
    "no-global-assign": "off",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  }
}
